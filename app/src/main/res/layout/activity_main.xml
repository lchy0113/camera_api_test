<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextureView는 background 금지. 부모에 배경을 준다 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000">

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <EditText
        android:id="@+id/etCameraId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:hint="cameraId (e.g., 0)"
        android:textSize="18sp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etKeyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="vendor key (section.tag)"
        android:textSize="18sp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp" />

        <Spinner
            android:id="@+id/spCardinality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/etValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="value (0 or 1)"
        android:textSize="18sp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReadChars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read (Chars)"
            android:textSize="18sp"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnReadResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read (Result)"
            android:textSize="18sp"
            android:padding="10dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btnApplyRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply to Preview Request (Set)"
        android:textSize="18sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnDumpChars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dump Characteristics"
        android:textSize="18sp"
        android:padding="10dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:fillViewport="true"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111111"
            android:textColor="#E0E0E0"
            android:typeface="monospace"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textIsSelectable="true"
            android:padding="10dp" />
    </ScrollView>

</LinearLayout>
